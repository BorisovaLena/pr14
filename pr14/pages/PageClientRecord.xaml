<Page x:Class="pr14.pages.PageClientRecord"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr14.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageClientRecord">

    <Grid>
        <StackPanel>
            <TextBlock Text="Запись клиента на услугу"/>
            <StackPanel Width="500">
                <GroupBox Header="Название">
                    <TextBox Name="tbName"/>
                </GroupBox>
                <GroupBox Header="Длительность">
                    <TextBox Name="tbTime"/>
                </GroupBox>
                <ComboBox Name="cmbClient" SelectionChanged="cmbClient_SelectionChanged"/>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</Page>
