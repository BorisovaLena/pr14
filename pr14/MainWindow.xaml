<Window x:Class="pr14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr14"
        mc:Ignorable="d"
        Title="Школа языков “Леарн”" Height="800" Width="800"
        Icon="pictures/school_logo.ico">

 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Image Source="pictures\school_logo.png" Width="60" Margin="10"/>
                <TextBlock Text="Школа языков “Леарн”" Style="{StaticResource TBlockZag}" VerticalAlignment="Center" Margin="200,0,0,0"/>
                <GroupBox Header="Код" Width="100" Height="65" Margin="180,0,0,0">
                    <TextBox Name="tbCode" Text="0000"/>
                </GroupBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Frame Name="frMain" NavigationUIVisibility="Hidden"/>
        </StackPanel>
        

    </Grid>
</Window>
